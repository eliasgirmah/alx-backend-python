#!/bin/bash

# === kurbeScript: Start and verify a local Kubernetes cluster ===

# Step 1: Check if Minikube is installed
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install Minikube and try again."
    echo "ğŸ‘‰ Installation guide: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Step 2: Check if kubectl is installed
if ! command -v kubectl &> /dev/null; then
    echo "âŒ kubectl is not installed. Please install kubectl and try again."
    echo "ğŸ‘‰ Installation guide: https://kubernetes.io/docs/tasks/tools/"
    exit 1
fi

# Step 3: Start the Minikube cluster
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Step 4: Verify the cluster is running
echo "ğŸ” Verifying cluster status..."
kubectl cluster-info

# Step 5: Get the list of pods in all namespaces
echo "ğŸ“¦ Retrieving pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster is up and running!"
